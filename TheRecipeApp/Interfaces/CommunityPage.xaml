<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheRecipeApp.Interfaces.CommunityPage"
             BackgroundColor="White">
    <VerticalStackLayout>
        <!-- Header -->
        <Frame BackgroundColor="White" Padding="20">
            <Label Text="Our Community" 
                   FontFamily="PoppinsBold" 
                   FontSize="24" 
                   TextColor="Black" 
                   HorizontalOptions="Center"/>
        </Frame>

        <!-- Profile Section -->
        <Frame BackgroundColor="#D7FF81" Padding="10" CornerRadius="0">
            <HorizontalStackLayout>
                <Frame WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="Black" VerticalOptions="Center">
                    <Label Text="{Binding FirstLetter}" 
                           FontFamily="PoppinsBold" 
                           FontSize="18" 
                           TextColor="White" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center" />
                </Frame>
                <Label Text="{Binding sourceName}" 
                       FontFamily="PoppinsRegular" 
                       FontSize="16" 
                       TextColor="Black" 
                       VerticalOptions="Center" 
                       Padding="10,0,0,0"/>
            </HorizontalStackLayout>
        </Frame>

        <!-- Image Section -->
        <Image Source="{Binding Image}" Aspect="AspectFill" HeightRequest="200" />

        <!-- Credits Section -->
        <Label Text="{Binding creditsText}"
               FontFamily="PoppinsLight"
               FontSize="12"
               TextColor="Black"
               Padding="10,5,10,0" />

        <!-- Title and Likes -->
        <HorizontalStackLayout Padding="10,5">
            <Label Text="{Binding Title}" 
                   FontFamily="PoppinsBold" 
                   FontSize="18" 
                   TextColor="Black" />
            <Label Text="{Binding aggregateLikes}" 
                   FontFamily="PoppinsRegular" 
                   FontSize="14" 
                   TextColor="Black" 
                   HorizontalOptions="EndAndExpand" />
            <Image Source="heart_icon.png" HeightRequest="20" WidthRequest="20" />
        </HorizontalStackLayout>

        <!-- Summary -->
        <Label Text="{Binding Summary}" 
               FontFamily="PoppinsRegular" 
               FontSize="14" 
               TextColor="Black" 
               Padding="10,0,10,10"/>
    </VerticalStackLayout>
</ContentPage>
