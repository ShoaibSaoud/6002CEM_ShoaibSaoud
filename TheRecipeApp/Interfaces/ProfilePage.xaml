<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheRecipeApp.Interfaces.ProfilePage"
             BackgroundColor="#F5F5F5"
             Title="Profile">


    <ScrollView>
        <VerticalStackLayout>
            
            <!-- Profile Header -->
            <Frame BackgroundColor="#D7FF81" Padding="0" HasShadow="False" CornerRadius="0">
                <VerticalStackLayout>
                   
                    <!-- Profile Icon -->
                    <Frame WidthRequest="80" HeightRequest="80"
                           BackgroundColor="#A1B886" 
                           CornerRadius="40"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Margin="20">
                        <Label x:Name="ProfileInitials"
                               Text="{Binding ProfileInitials}"
                               FontSize="36"
                               FontAttributes="Bold"
                               TextColor="Black"
                               FontFamily="PoppinsBold"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"
                               TranslationY="-3"/>
                    </Frame>

                    <!-- Username -->
                    <Label x:Name="UsernameLabel"
                          Text="{Binding Username}"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="Black"
                           FontFamily="PoppinsRegular"
                           HorizontalOptions="Center"
                           Margin="0, -10, 0, 20"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Update Password Section -->
            <VerticalStackLayout Padding="20">
                <Label Text="Update Password"
                       FontSize="16"
                       FontAttributes="Bold"
                       FontFamily="PoppinsRegular"
                       TextColor="Black"/>

                <Entry x:Name="CurrentPasswordEntry"
                       Placeholder="Current Password" 
                       IsPassword="True"
                       BackgroundColor="White"
                       TextColor="Black"
                       Margin="0,5,0,0"/>

                <Entry x:Name="NewPasswordEntry"
                       Placeholder="New Password" 
                       IsPassword="True"
                       BackgroundColor="White"
                       TextColor="Black"
                       Margin="0,5,0,0"/>

                <Button Text="Update Password"
                        BackgroundColor="#D7FF81"
                        TextColor="Black"
                        FontAttributes="Bold"
                        CornerRadius="20"
                        Margin="10"
                        Clicked="OnUpdatePasswordClicked"/>
            </VerticalStackLayout>

            <!-- Favorites Section -->
            <VerticalStackLayout Padding="20">
                <Label Text="Favorites"
                       FontSize="18"
                       FontAttributes="Bold"
                       FontFamily="PoppinsBold"
                       TextColor="#A1B886"
                       Margin="0,0,0,5"/>

                <!-- No favoritess message -->
                <VerticalStackLayout x:Name="NoFavoritesMessage" HorizontalOptions="Center">
                    <Image Source="sad_face.png"
                           WidthRequest="100"
                           HeightRequest="100"
                           TranslationY="60"/>
                    <Label Text="You Havenâ€™t Liked Any Recipes Yet"
                           FontSize="18"
                           FontFamily="PoppinsRegular"
                           TextColor="Black"
                           HorizontalTextAlignment="Center"
                           TranslationY="80"/>
                </VerticalStackLayout>
                <CollectionView x:Name="FavoritesList" IsVisible="False">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical" Span="2"/>
                    </CollectionView.ItemsLayout>

                    <!-- Favorites list Secion -->
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="0" CornerRadius="10" Margin="5" HasShadow="True">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnFavoriteItemTapped" />
                                </Frame.GestureRecognizers>
                                <VerticalStackLayout>
                                    <Frame Padding="0" CornerRadius="10" HasShadow="False">
                                        <Image Source="{Binding Image}" HeightRequest="150" Aspect="AspectFill" />
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnFavoriteItemTapped" />
                                        </Frame.GestureRecognizers>
                                    </Frame>
                                    <Label Text="{Binding Title}"
                                           FontSize="16"
                                           FontFamily="PoppinsBold"
                                           TextColor="Black"
                                           Margin="5,5,5,0"/>   
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
