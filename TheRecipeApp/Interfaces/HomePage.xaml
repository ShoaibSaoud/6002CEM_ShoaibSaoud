<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheRecipeApp.Interfaces.HomePage"
             Title="HomePage">

    <Grid RowDefinitions="Auto,*">

        <!-- Main Content -->
        <VerticalStackLayout Padding="20" Grid.Row="0">
           
            <Label x:Name="userStatusLabel" 
                   FontSize="18" 
                   FontFamily="PoppinsBold"
                   TextColor="Black"
                   HeightRequest="50"/>
            
     

            <Label Text="What is in your kitchen?"
                   FontFamily="PoppinsBold"
                   FontSize="20"
                   TextColor="Black"/>

            <Label Text="Enter some Recipes"
                   FontFamily="PoppinsRegular"
                   FontSize="14"
                   TextColor="Gray"/>

            <!-- Search Bar -->
            <Border BackgroundColor="White"
                    StrokeShape="RoundRectangle 25"
                    Stroke="#D7FF81"
                    Padding="8">
                <HorizontalStackLayout Spacing="10">
                    <Image Source="search_icon.png" WidthRequest="24" HeightRequest="24"/>
                    <Entry Placeholder="Type your Recipe"
                           FontFamily="PoppinsRegular"
                           TextColor="Black"
                           PlaceholderColor="Gray"/>
                </HorizontalStackLayout>
            </Border>
            

            <!-- Recipe Grid -->

           </VerticalStackLayout>



    </Grid> 

</ContentPage>
